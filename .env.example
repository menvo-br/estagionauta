
# ===========================
# SUPABASE CONFIGURATION
# ===========================
# Obtenha essas chaves no dashboard do Supabase: https://supabase.com/dashboard
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ===========================
# OPENAI CONFIGURATION
# ===========================
# Para análise de currículo com IA
# Obtenha em: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ===========================
# STRIPE CONFIGURATION
# ===========================
# Para pagamentos de análises e assinaturas
# Obtenha em: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Webhook secret para verificar eventos do Stripe
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# ===========================
# APP CONFIGURATION
# ===========================
# URL base da aplicação
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================
# EMAIL CONFIGURATION (Opcional)
# ===========================
# Para envio de análises por email
# Escolha um provedor: SendGrid, Resend, etc.
EMAIL_SERVICE_API_KEY=your_email_service_api_key_here
FROM_EMAIL=noreply@estagionauta.com.br

# ===========================
# MAPBOX CONFIGURATION (Opcional)
# ===========================
# Para mapas interativos das agências
# Obtenha em: https://mapbox.com/
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# ===========================
# GOOGLE OAUTH CONFIGURATION
# ===========================
# Já configurado no Supabase, mas caso precise:
# GOOGLE_CLIENT_ID=your_google_client_id_here
# GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ===========================
# LINKEDIN OAUTH CONFIGURATION
# ===========================
# Já configurado no Supabase, mas caso precise:
# LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
# LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here

# ===========================
# WHATSAPP INTEGRATION (Opcional)
# ===========================
# Para compartilhamento direto via WhatsApp Business API
# WHATSAPP_BUSINESS_API_TOKEN=your_whatsapp_token_here

# ===========================
# ANALYTICS (Opcional)
# ===========================
# Google Analytics
# NEXT_PUBLIC_GA_ID=your_google_analytics_id_here

# Hotjar ou similar
# NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id_here

# ===========================
# SENTRY (Opcional)
# ===========================
# Para monitoramento de erros
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# ===========================
# FEATURE FLAGS (Opcional)
# ===========================
# Para ativar/desativar funcionalidades gradualmente
FEATURE_PAYMENTS_ENABLED=false
FEATURE_MAPS_ENABLED=false
FEATURE_EMAIL_SHARING=false
FEATURE_ADMIN_PANEL=false

# ===========================
# DEVELOPMENT ONLY
# ===========================
# Para desenvolvimento local
NODE_ENV=development
PORT=3000

# ===========================
# INSTRUÇÕES DE CONFIGURAÇÃO
# ===========================
# 1. Copie este arquivo para .env.local
# 2. Preencha as variáveis necessárias
# 3. Configure OAuth no Supabase Dashboard
# 4. Configure webhooks no Stripe
# 5. Execute: npm run dev

# ===========================
# LINKS ÚTEIS
